{
  "compilerOptions": {
      "module": "commonjs",
      "target": "ES2018",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "build",
      "baseUrl": ".",
      "pretty": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true
  },
  "include": ["src/**/*"]
}
